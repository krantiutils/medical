// IPD MODELS (Phase 4)
// ============================================================================

enum WardType {
  GENERAL
  SEMI_PRIVATE
  PRIVATE
  ICU
  NICU // Neonatal ICU
  PICU // Pediatric ICU
  CCU // Cardiac Care Unit
  EMERGENCY
  MATERNITY
  PEDIATRIC
  PSYCHIATRIC
}

enum BedStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
  MAINTENANCE
  OUT_OF_SERVICE
}

enum AdmissionStatus {
  ADMITTED
  DISCHARGED
  TRANSFERRED
  DECEASED
  LEFT_AMA // Left Against Medical Advice
}

model Ward {
  id          String   @id @default(uuid())
  name        String // e.g., "Ward A", "ICU-1"
  type        WardType
  floor       String? // e.g., "2nd Floor", "Ground Floor"
  building    String? // Building name if multiple buildings
  capacity    Int // Total bed capacity
  description String?  @db.Text
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // Relations
  clinic_id String
  clinic    Clinic @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  // Beds in this ward
  beds Bed[]

  @@unique([clinic_id, name])
  @@index([clinic_id, type])
  @@index([clinic_id, is_active])
  @@index([clinic_id])
}

model Bed {
  id         String    @id @default(uuid())
  bed_number String // e.g., "A-101", "ICU-01"
  status     BedStatus @default(AVAILABLE)
  type       WardType? // Override ward type if needed (e.g., private bed in general ward)
  daily_rate Decimal   @default(0) @db.Decimal(10, 2) // Daily bed charge
  features   String[] // e.g., ["Oxygen", "Monitor", "AC"]
  notes      String?   @db.Text
  is_active  Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

  // Relations
  ward_id String
  ward    Ward   @relation(fields: [ward_id], references: [id], onDelete: Cascade)

  // Current and past admissions for this bed
  admissions Admission[]

  @@unique([ward_id, bed_number])
  @@index([ward_id, status])
  @@index([ward_id])
  @@index([status])
}

model Admission {
  id                  String          @id @default(uuid())
  admission_number    String // e.g., "ADM-2026-0001"
  status              AdmissionStatus @default(ADMITTED)
  // Admission details
  admission_date      DateTime        @default(now())
  admission_diagnosis String?         @db.Text // Provisional diagnosis at admission
  chief_complaint     String?         @db.Text
  // Discharge details
  discharge_date      DateTime?
  discharge_diagnosis String?         @db.Text // Final diagnosis at discharge
  discharge_summary   String?         @db.Text
  discharge_type      String? // e.g., "Normal", "LAMA", "Expired", "Referred"
  discharge_advice    String?         @db.Text // Post-discharge instructions
  // Other
  notes               String?         @db.Text
  created_at          DateTime        @default(now())
  updated_at          DateTime        @updatedAt

  // Relations
  clinic_id           String
  clinic              Clinic        @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  patient_id          String
  patient             Patient       @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  bed_id              String
  bed                 Bed           @relation(fields: [bed_id], references: [id], onDelete: Cascade)
  admitting_doctor_id String // Doctor who admitted the patient
  admitting_doctor    Professional  @relation("AdmissionAdmittingDoctor", fields: [admitting_doctor_id], references: [id], onDelete: Cascade)
  attending_doctor_id String? // Primary attending doctor (may differ from admitting)
  attending_doctor    Professional? @relation("AdmissionAttendingDoctor", fields: [attending_doctor_id], references: [id])

  @@unique([clinic_id, admission_number])
  @@index([clinic_id, patient_id])
  @@index([clinic_id, status])
  @@index([clinic_id])
  @@index([patient_id])
  @@index([bed_id])
  @@index([admitting_doctor_id])
  @@index([attending_doctor_id])
  @@index([admission_date])
  @@index([status])
}

// ============================================================================
// TELEMEDICINE MODELS (Phase 5)
// ============================================================================

enum VideoConsultationStatus {
  SCHEDULED // Patient has booked, awaiting confirmation
  CONFIRMED // Doctor confirmed the booking
  WAITING // Patient is in waiting room
  IN_PROGRESS // Video call is active
  COMPLETED // Consultation finished
  CANCELLED // Cancelled by either party
  NO_SHOW // Patient or doctor didn't show up
  EXPIRED // Booking time passed without call
}

enum VideoConsultationType {
  SCHEDULED // Pre-booked consultation at a specific time
  INSTANT // On-demand consultation with available doctor
}

model VideoConsultation {
  id               String                   @id @default(uuid())
  type             VideoConsultationType    @default(SCHEDULED)
  status           VideoConsultationStatus  @default(SCHEDULED)
  // Scheduling
  scheduled_at     DateTime? // Scheduled start time (for SCHEDULED type)
  scheduled_end    DateTime? // Scheduled end time
  // Call details
  room_id          String? // Video room identifier (e.g., Daily.co room name)
  room_url         String? // Full URL for video room
  started_at       DateTime? // When call actually started
  ended_at         DateTime? // When call ended
  duration_minutes Int? // Actual call duration in minutes
  // Payment
  fee              Decimal                  @db.Decimal(10, 2) // Consultation fee in NPR
  payment_status   PaymentStatus            @default(PENDING)
  payment_id       String? // Payment gateway transaction ID
  paid_at          DateTime?
  // Consultation notes
  chief_complaint  String?                  @db.Text // Patient's reason for consultation
  notes            String?                  @db.Text // Doctor's consultation notes
  prescription     String?                  @db.Text // Digital prescription (can link to Prescription model later)
  follow_up_date   DateTime? // Recommended follow-up date
  // Metadata
  cancellation_reason String?
  cancelled_by     String? // 'patient' or 'doctor'
  cancelled_at     DateTime?
  created_at       DateTime                 @default(now())
  updated_at       DateTime                 @updatedAt

  // Relations
  doctor_id  String
  doctor     Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)
  patient_id String
  patient    User         @relation("VideoConsultationPatient", fields: [patient_id], references: [id], onDelete: Cascade)

  @@index([doctor_id, status])
  @@index([doctor_id, scheduled_at])
  @@index([patient_id, status])
  @@index([patient_id])
  @@index([doctor_id])
  @@index([status])
  @@index([type])
  @@index([scheduled_at])
  @@index([created_at])
}
