generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProfessionalType {
  DOCTOR
  DENTIST
  PHARMACIST
}

enum UserRole {
  USER
  PROFESSIONAL
  ADMIN
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ClinicType {
  CLINIC
  POLYCLINIC
  HOSPITAL
  PHARMACY
}

enum AppointmentStatus {
  SCHEDULED
  CHECKED_IN
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum AppointmentType {
  NEW
  FOLLOW_UP
  EMERGENCY
}

enum AppointmentSource {
  ONLINE
  WALK_IN
  PHONE
}

enum PaymentMode {
  CASH
  CARD
  UPI
  BANK_TRANSFER
  INSURANCE
  CREDIT // For khata/credit accounts
}

enum PaymentStatus {
  PENDING
  PAID
  PARTIAL
  REFUNDED
  CANCELLED
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified DateTime?
  phone         String?
  password_hash String?
  name          String?
  image         String?
  role          UserRole  @default(USER)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  // App relations
  verification_requests  VerificationRequest[] @relation("UserRequests")
  reviewed_verifications VerificationRequest[] @relation("ReviewedBy")
  claimed_professionals  Professional[]        @relation("ClaimedBy")
  audit_logs             AuditLog[]
  claimed_clinics        Clinic[]              @relation("ClinicClaimedBy")
  invoices_created       Invoice[]             // Invoices created by this user
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Professional {
  id                  String           @id @default(uuid())
  type                ProfessionalType
  registration_number String
  full_name           String
  full_name_ne        String?
  photo_url           String?
  gender              String?
  address             String?
  degree              String?
  specialties         String[]
  registration_date   DateTime?
  remarks             String?
  verified            Boolean          @default(false)
  slug                String
  created_at          DateTime         @default(now())
  updated_at          DateTime         @updatedAt
  last_synced_at      DateTime?
  meta                Json?

  // Claimed by relation (optional)
  claimed_by_id String?
  claimed_by    User?   @relation("ClaimedBy", fields: [claimed_by_id], references: [id])

  // Verification requests for this professional
  verification_requests VerificationRequest[]

  // Clinics where this professional works
  clinics ClinicDoctor[]

  // Schedules for this professional at clinics
  schedules DoctorSchedule[]

  // Leave records for this professional
  leaves DoctorLeave[]

  // Appointments for this professional
  appointments Appointment[]

  // Reviews for this professional
  reviews Review[]

  @@unique([type, registration_number])
  @@index([slug])
  @@index([type])
  @@index([claimed_by_id])
}

model VerificationRequest {
  id                String             @id @default(uuid())
  status            VerificationStatus @default(PENDING)
  government_id_url String?
  certificate_url   String?
  admin_notes       String?            @db.Text
  submitted_at      DateTime           @default(now())
  reviewed_at       DateTime?

  // Relations
  user_id        String
  user           User         @relation("UserRequests", fields: [user_id], references: [id])
  professional_id String
  professional   Professional @relation(fields: [professional_id], references: [id])
  reviewed_by_id String?
  reviewed_by    User?        @relation("ReviewedBy", fields: [reviewed_by_id], references: [id])

  @@index([status])
  @@index([user_id])
  @@index([professional_id])
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String   // "CLAIM_SUBMITTED", "CLAIM_APPROVED", "CLAIM_REJECTED"
  target_type String   // "VerificationRequest"
  target_id   String
  actor_id    String?
  actor       User?    @relation(fields: [actor_id], references: [id])
  metadata    Json?
  ip_address  String?
  user_agent  String?
  created_at  DateTime @default(now())

  @@index([action])
  @@index([target_type, target_id])
  @@index([actor_id])
  @@index([created_at])
}

model Clinic {
  id              String      @id @default(uuid())
  name            String
  slug            String      @unique
  type            ClinicType
  address         String?
  location_lat    Float?
  location_lng    Float?
  phone           String?
  email           String?
  website         String?
  logo_url        String?
  photos          String[]
  services        String[]
  timings         Json?
  verified        Boolean     @default(false)
  google_place_id String?
  osm_id          String?
  meta            Json?
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  // Claimed by relation (optional)
  claimed_by_id String?
  claimed_by    User?   @relation("ClinicClaimedBy", fields: [claimed_by_id], references: [id])

  // Doctors affiliated with this clinic
  doctors ClinicDoctor[]

  // Patients registered at this clinic
  patients Patient[]

  // Doctor schedules at this clinic
  schedules DoctorSchedule[]

  // Doctor leaves at this clinic
  leaves DoctorLeave[]

  // Appointments at this clinic
  appointments Appointment[]

  // Services offered at this clinic
  services_list Service[]

  // Invoices generated at this clinic
  invoices Invoice[]

  // Reviews for this clinic
  reviews Review[]

  // Pharmacy models (Phase 3)
  suppliers          Supplier[]
  products           Product[]
  inventory_batches  InventoryBatch[]
  sales              Sale[]
  credit_accounts    CreditAccount[]
  credit_transactions CreditTransaction[]

  @@index([type])
  @@index([claimed_by_id])
}

model ClinicDoctor {
  id        String   @id @default(uuid())
  role      String?  // e.g., "visiting", "permanent", "consultant"
  joined_at DateTime @default(now())

  // Relations
  clinic_id String
  clinic    Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  doctor_id String
  doctor    Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)

  @@unique([clinic_id, doctor_id])
  @@index([clinic_id])
  @@index([doctor_id])
}

model Patient {
  id                String    @id @default(uuid())
  patient_number    String    // Clinic-specific patient number
  full_name         String
  phone             String?
  email             String?
  date_of_birth     DateTime?
  gender            String?
  blood_group       String?
  address           String?
  emergency_contact Json?
  allergies         String[]
  medical_history   Json?
  insurance_info    Json?
  photo_url         String?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  // Relations
  clinic_id String
  clinic    Clinic @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  // Appointments for this patient
  appointments Appointment[]

  // Invoices for this patient
  invoices Invoice[]

  // Reviews submitted by this patient
  reviews Review[]

  @@unique([clinic_id, patient_number])
  @@unique([clinic_id, phone])
  @@index([phone])
  @@index([clinic_id])
}

model DoctorSchedule {
  id                     String    @id @default(uuid())
  day_of_week            Int       // 0 = Sunday, 1 = Monday, ..., 6 = Saturday
  start_time             String    // Format: "HH:MM" (e.g., "09:00")
  end_time               String    // Format: "HH:MM" (e.g., "17:00")
  slot_duration_minutes  Int       // Duration of each appointment slot
  max_patients_per_slot  Int       @default(1) // Max patients per slot
  is_active              Boolean   @default(true)
  effective_from         DateTime  @default(now())
  effective_to           DateTime? // Nullable for indefinite schedules

  // Relations
  clinic_id String
  clinic    Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  doctor_id String
  doctor    Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)

  @@index([clinic_id, doctor_id, day_of_week])
  @@index([clinic_id])
  @@index([doctor_id])
}

model DoctorLeave {
  id         String    @id @default(uuid())
  leave_date DateTime  // Date of leave
  start_time String?   // Nullable for full day leave, format "HH:MM"
  end_time   String?   // Nullable for full day leave, format "HH:MM"
  reason     String    // Reason for leave
  created_at DateTime  @default(now())

  // Relations
  doctor_id String
  doctor    Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)
  clinic_id String
  clinic    Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  @@index([doctor_id, leave_date])
  @@index([clinic_id])
}

model Appointment {
  id               String            @id @default(uuid())
  appointment_date DateTime          // Date of the appointment
  time_slot_start  String            // Format: "HH:MM" (e.g., "09:00")
  time_slot_end    String            // Format: "HH:MM" (e.g., "09:30")
  status           AppointmentStatus @default(SCHEDULED)
  type             AppointmentType   @default(NEW)
  chief_complaint  String?           // Reason for visit
  token_number     Int               // Queue token number for the day
  source           AppointmentSource @default(ONLINE)
  notes            String?           @db.Text
  created_at       DateTime          @default(now())
  updated_at       DateTime          @updatedAt

  // Relations
  clinic_id  String
  clinic     Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  patient_id String
  patient    Patient      @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  doctor_id  String
  doctor     Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)

  // Invoice linked to this appointment (optional)
  invoice Invoice?

  // Review linked to this appointment (optional)
  review Review?

  @@index([clinic_id, appointment_date, doctor_id])
  @@index([clinic_id])
  @@index([patient_id])
  @@index([doctor_id])
  @@index([status])
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?  @db.Text
  price       Decimal  @db.Decimal(10, 2) // Supports up to 99,999,999.99
  category    String?  // e.g., "Consultation", "Procedure", "Test", "Medication"
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())

  // Relations
  clinic_id String
  clinic    Clinic @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  @@index([clinic_id, is_active])
  @@index([clinic_id])
}

model Invoice {
  id             String        @id @default(uuid())
  invoice_number String        // Clinic-specific invoice number, e.g., "INV-2026-0001"
  items          Json          // Array of {service_id, name, quantity, unit_price, amount}
  subtotal       Decimal       @db.Decimal(10, 2)
  discount       Decimal       @default(0) @db.Decimal(10, 2)
  tax            Decimal       @default(0) @db.Decimal(10, 2)
  total          Decimal       @db.Decimal(10, 2)
  payment_mode   PaymentMode   @default(CASH)
  payment_status PaymentStatus @default(PENDING)
  notes          String?       @db.Text
  created_at     DateTime      @default(now())

  // Relations
  clinic_id      String
  clinic         Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  patient_id     String
  patient        Patient      @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  appointment_id String?      @unique // Nullable - invoice may or may not be linked to an appointment (one-to-one)
  appointment    Appointment? @relation(fields: [appointment_id], references: [id])
  created_by_id  String
  created_by     User         @relation(fields: [created_by_id], references: [id])

  @@unique([clinic_id, invoice_number])
  @@index([clinic_id, invoice_number])
  @@index([clinic_id])
  @@index([patient_id])
  @@index([appointment_id])
  @@index([created_by_id])
  @@index([payment_status])
}

model Review {
  id              String    @id @default(uuid())
  rating          Int       // 1-5 star rating
  review_text     String?   @db.Text
  categories      Json?     // e.g., {"cleanliness": 5, "wait_time": 4, "staff": 5}
  doctor_response String?   @db.Text
  is_published    Boolean   @default(true)
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt

  // Relations
  clinic_id      String
  clinic         Clinic        @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  doctor_id      String?       // Nullable - review may be for clinic only, not a specific doctor
  doctor         Professional? @relation(fields: [doctor_id], references: [id], onDelete: SetNull)
  patient_id     String
  patient        Patient       @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  appointment_id String?       @unique // Nullable - review may or may not be linked to an appointment
  appointment    Appointment?  @relation(fields: [appointment_id], references: [id])

  @@index([clinic_id, is_published])
  @@index([clinic_id])
  @@index([doctor_id])
  @@index([patient_id])
  @@index([rating])
}

// ============================================================================
// PHARMACY MODELS (Phase 3)
// ============================================================================

enum DrugSchedule {
  OTC       // Over the Counter - no prescription needed
  SCHEDULE_H     // Prescription-only drugs
  SCHEDULE_H1    // Stronger prescription drugs with special labeling
  SCHEDULE_X     // Narcotic and psychotropic drugs
  SCHEDULE_G     // Requires "Caution: Government property"
}

enum ProductCategory {
  MEDICINE
  MEDICAL_DEVICE
  COSMETIC
  AYURVEDIC
  HOMEOPATHIC
  SUPPLEMENT
  OTHER
}

enum CreditTransactionType {
  SALE       // Credit sale increases balance
  PAYMENT    // Payment decreases balance
  ADJUSTMENT // Manual adjustment (can be positive or negative)
  REFUND     // Refund decreases balance (return of paid amount)
}

model Supplier {
  id            String   @id @default(uuid())
  name          String
  contact_name  String?
  phone         String?
  email         String?
  address       String?
  gstin         String?  // GST Identification Number (for India/Nepal VAT)
  pan_number    String?  // PAN number for tax purposes
  payment_terms String?  // e.g., "Net 30", "COD"
  is_active     Boolean  @default(true)
  notes         String?  @db.Text
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  // Relations
  clinic_id String
  clinic    Clinic @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  // Products from this supplier
  products Product[]

  // Inventory batches from this supplier
  batches InventoryBatch[]

  @@unique([clinic_id, name])
  @@index([clinic_id, is_active])
  @@index([clinic_id])
}

model Product {
  id              String          @id @default(uuid())
  name            String          // Brand name
  generic_name    String?         // Generic/salt name
  category        ProductCategory @default(MEDICINE)
  schedule        DrugSchedule?   // Drug schedule classification
  manufacturer    String?         // Manufacturer name
  barcode         String?         // Barcode/SKU
  hsn_code        String?         // HSN code for GST
  gst_rate        Decimal         @default(0) @db.Decimal(5, 2) // GST percentage (0-100)
  unit            String          @default("strip") // e.g., "strip", "bottle", "tablet", "ml"
  pack_size       Int             @default(1) // e.g., 10 tablets per strip
  min_stock_level Int             @default(0) // Reorder point
  max_stock_level Int?            // Maximum stock to maintain
  description     String?         @db.Text
  storage_info    String?         // Storage instructions (e.g., "Store below 25Â°C")
  is_active       Boolean         @default(true)
  meta            Json?           // Additional product metadata
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt

  // Relations
  clinic_id   String
  clinic      Clinic    @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  supplier_id String?
  supplier    Supplier? @relation(fields: [supplier_id], references: [id], onDelete: SetNull)

  // Inventory batches for this product
  batches InventoryBatch[]

  @@unique([clinic_id, barcode])
  @@index([clinic_id, is_active])
  @@index([clinic_id, category])
  @@index([clinic_id])
  @@index([supplier_id])
  @@index([barcode])
  @@index([generic_name])
}

model InventoryBatch {
  id              String    @id @default(uuid())
  batch_number    String    // Manufacturer's batch number
  expiry_date     DateTime  // Expiry date
  quantity        Int       // Current quantity in stock
  original_qty    Int       // Original quantity when received
  purchase_price  Decimal   @db.Decimal(10, 2) // Cost price per unit
  mrp             Decimal   @db.Decimal(10, 2) // Maximum Retail Price per unit
  selling_price   Decimal   @db.Decimal(10, 2) // Actual selling price per unit
  received_date   DateTime  @default(now()) // Date batch was received
  invoice_number  String?   // Supplier invoice number
  is_active       Boolean   @default(true) // False when fully sold or expired
  notes           String?   @db.Text
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt

  // Relations
  product_id  String
  product     Product   @relation(fields: [product_id], references: [id], onDelete: Cascade)
  supplier_id String?
  supplier    Supplier? @relation(fields: [supplier_id], references: [id], onDelete: SetNull)
  clinic_id   String
  clinic      Clinic    @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  @@unique([clinic_id, product_id, batch_number])
  @@index([clinic_id, product_id, expiry_date]) // For FEFO (First Expired, First Out)
  @@index([clinic_id, expiry_date]) // For expiry tracking
  @@index([clinic_id])
  @@index([product_id])
  @@index([supplier_id])
  @@index([is_active])
}

model Sale {
  id             String        @id @default(uuid())
  sale_number    String        // e.g., "SALE-2026-0001"
  items          Json          // Array of {product_id, batch_id, product_name, quantity, unit_price, discount, gst_amount, amount}
  subtotal       Decimal       @db.Decimal(10, 2) // Total before tax and discount
  discount       Decimal       @default(0) @db.Decimal(10, 2) // Total discount
  tax_amount     Decimal       @default(0) @db.Decimal(10, 2) // Total GST/tax
  total          Decimal       @db.Decimal(10, 2) // Final total (subtotal - discount + tax)
  amount_paid    Decimal       @default(0) @db.Decimal(10, 2) // Amount paid (0 for full credit)
  amount_due     Decimal       @default(0) @db.Decimal(10, 2) // Remaining balance
  payment_mode   PaymentMode   @default(CASH)
  is_credit      Boolean       @default(false) // True if this is a credit/khata sale
  prescription_id String?      // Optional prescription reference
  notes          String?       @db.Text
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt

  // Relations
  clinic_id         String
  clinic            Clinic         @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  credit_account_id String?
  credit_account    CreditAccount? @relation(fields: [credit_account_id], references: [id], onDelete: SetNull)

  // Credit transaction linked to this sale (if credit sale)
  credit_transaction CreditTransaction?

  @@unique([clinic_id, sale_number])
  @@index([clinic_id, created_at])
  @@index([clinic_id])
  @@index([credit_account_id])
  @@index([is_credit])
}

model CreditAccount {
  id              String   @id @default(uuid())
  customer_name   String   // Customer name for credit account
  phone           String?
  address         String?
  credit_limit    Decimal  @default(0) @db.Decimal(10, 2) // Maximum credit allowed
  current_balance Decimal  @default(0) @db.Decimal(10, 2) // Current outstanding balance
  notes           String?  @db.Text
  is_active       Boolean  @default(true)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  // Relations
  clinic_id String
  clinic    Clinic @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  // Sales linked to this credit account
  sales Sale[]

  // Transaction history
  transactions CreditTransaction[]

  @@unique([clinic_id, phone])
  @@index([clinic_id, is_active])
  @@index([clinic_id])
  @@index([phone])
}

model CreditTransaction {
  id          String                @id @default(uuid())
  type        CreditTransactionType
  amount      Decimal               @db.Decimal(10, 2) // Transaction amount
  balance     Decimal               @db.Decimal(10, 2) // Balance after this transaction
  description String?               // Description of transaction
  notes       String?               @db.Text
  created_at  DateTime              @default(now())

  // Relations
  credit_account_id String
  credit_account    CreditAccount @relation(fields: [credit_account_id], references: [id], onDelete: Cascade)
  sale_id           String?       @unique // Linked sale (for SALE type transactions)
  sale              Sale?         @relation(fields: [sale_id], references: [id], onDelete: SetNull)
  clinic_id         String
  clinic            Clinic        @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  @@index([credit_account_id, created_at])
  @@index([credit_account_id])
  @@index([clinic_id])
  @@index([type])
}
