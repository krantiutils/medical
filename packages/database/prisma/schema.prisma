generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProfessionalType {
  DOCTOR
  DENTIST
  PHARMACIST
}

enum UserRole {
  USER
  PROFESSIONAL
  ADMIN
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ClinicType {
  CLINIC
  POLYCLINIC
  HOSPITAL
  PHARMACY
}

enum AppointmentStatus {
  SCHEDULED
  CHECKED_IN
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum AppointmentType {
  NEW
  FOLLOW_UP
  EMERGENCY
}

enum AppointmentSource {
  ONLINE
  WALK_IN
  PHONE
}

enum PaymentMode {
  CASH
  CARD
  UPI
  BANK_TRANSFER
  INSURANCE
  CREDIT // For khata/credit accounts
}

enum PaymentStatus {
  PENDING
  PAID
  PARTIAL
  REFUNDED
  CANCELLED
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified DateTime?
  phone         String?
  password_hash String?
  name          String?
  image         String?
  role          UserRole  @default(USER)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  // App relations
  verification_requests  VerificationRequest[] @relation("UserRequests")
  reviewed_verifications VerificationRequest[] @relation("ReviewedBy")
  claimed_professionals  Professional[]        @relation("ClaimedBy")
  audit_logs             AuditLog[]
  claimed_clinics        Clinic[]              @relation("ClinicClaimedBy")
  invoices_created       Invoice[]             // Invoices created by this user
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Professional {
  id                  String           @id @default(uuid())
  type                ProfessionalType
  registration_number String
  full_name           String
  full_name_ne        String?
  photo_url           String?
  gender              String?
  address             String?
  degree              String?
  specialties         String[]
  registration_date   DateTime?
  remarks             String?
  verified            Boolean          @default(false)
  slug                String
  created_at          DateTime         @default(now())
  updated_at          DateTime         @updatedAt
  last_synced_at      DateTime?
  meta                Json?

  // Claimed by relation (optional)
  claimed_by_id String?
  claimed_by    User?   @relation("ClaimedBy", fields: [claimed_by_id], references: [id])

  // Verification requests for this professional
  verification_requests VerificationRequest[]

  // Clinics where this professional works
  clinics ClinicDoctor[]

  // Schedules for this professional at clinics
  schedules DoctorSchedule[]

  // Leave records for this professional
  leaves DoctorLeave[]

  // Appointments for this professional
  appointments Appointment[]

  @@unique([type, registration_number])
  @@index([slug])
  @@index([type])
  @@index([claimed_by_id])
}

model VerificationRequest {
  id                String             @id @default(uuid())
  status            VerificationStatus @default(PENDING)
  government_id_url String?
  certificate_url   String?
  admin_notes       String?            @db.Text
  submitted_at      DateTime           @default(now())
  reviewed_at       DateTime?

  // Relations
  user_id        String
  user           User         @relation("UserRequests", fields: [user_id], references: [id])
  professional_id String
  professional   Professional @relation(fields: [professional_id], references: [id])
  reviewed_by_id String?
  reviewed_by    User?        @relation("ReviewedBy", fields: [reviewed_by_id], references: [id])

  @@index([status])
  @@index([user_id])
  @@index([professional_id])
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String   // "CLAIM_SUBMITTED", "CLAIM_APPROVED", "CLAIM_REJECTED"
  target_type String   // "VerificationRequest"
  target_id   String
  actor_id    String?
  actor       User?    @relation(fields: [actor_id], references: [id])
  metadata    Json?
  ip_address  String?
  user_agent  String?
  created_at  DateTime @default(now())

  @@index([action])
  @@index([target_type, target_id])
  @@index([actor_id])
  @@index([created_at])
}

model Clinic {
  id              String      @id @default(uuid())
  name            String
  slug            String      @unique
  type            ClinicType
  address         String?
  location_lat    Float?
  location_lng    Float?
  phone           String?
  email           String?
  website         String?
  logo_url        String?
  photos          String[]
  services        String[]
  timings         Json?
  verified        Boolean     @default(false)
  google_place_id String?
  osm_id          String?
  meta            Json?
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  // Claimed by relation (optional)
  claimed_by_id String?
  claimed_by    User?   @relation("ClinicClaimedBy", fields: [claimed_by_id], references: [id])

  // Doctors affiliated with this clinic
  doctors ClinicDoctor[]

  // Patients registered at this clinic
  patients Patient[]

  // Doctor schedules at this clinic
  schedules DoctorSchedule[]

  // Doctor leaves at this clinic
  leaves DoctorLeave[]

  // Appointments at this clinic
  appointments Appointment[]

  // Services offered at this clinic
  services_list Service[]

  // Invoices generated at this clinic
  invoices Invoice[]

  @@index([type])
  @@index([claimed_by_id])
}

model ClinicDoctor {
  id        String   @id @default(uuid())
  role      String?  // e.g., "visiting", "permanent", "consultant"
  joined_at DateTime @default(now())

  // Relations
  clinic_id String
  clinic    Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  doctor_id String
  doctor    Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)

  @@unique([clinic_id, doctor_id])
  @@index([clinic_id])
  @@index([doctor_id])
}

model Patient {
  id                String    @id @default(uuid())
  patient_number    String    // Clinic-specific patient number
  full_name         String
  phone             String?
  email             String?
  date_of_birth     DateTime?
  gender            String?
  blood_group       String?
  address           String?
  emergency_contact Json?
  allergies         String[]
  medical_history   Json?
  insurance_info    Json?
  photo_url         String?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  // Relations
  clinic_id String
  clinic    Clinic @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  // Appointments for this patient
  appointments Appointment[]

  // Invoices for this patient
  invoices Invoice[]

  @@unique([clinic_id, patient_number])
  @@unique([clinic_id, phone])
  @@index([phone])
  @@index([clinic_id])
}

model DoctorSchedule {
  id                     String    @id @default(uuid())
  day_of_week            Int       // 0 = Sunday, 1 = Monday, ..., 6 = Saturday
  start_time             String    // Format: "HH:MM" (e.g., "09:00")
  end_time               String    // Format: "HH:MM" (e.g., "17:00")
  slot_duration_minutes  Int       // Duration of each appointment slot
  max_patients_per_slot  Int       @default(1) // Max patients per slot
  is_active              Boolean   @default(true)
  effective_from         DateTime  @default(now())
  effective_to           DateTime? // Nullable for indefinite schedules

  // Relations
  clinic_id String
  clinic    Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  doctor_id String
  doctor    Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)

  @@index([clinic_id, doctor_id, day_of_week])
  @@index([clinic_id])
  @@index([doctor_id])
}

model DoctorLeave {
  id         String    @id @default(uuid())
  leave_date DateTime  // Date of leave
  start_time String?   // Nullable for full day leave, format "HH:MM"
  end_time   String?   // Nullable for full day leave, format "HH:MM"
  reason     String    // Reason for leave
  created_at DateTime  @default(now())

  // Relations
  doctor_id String
  doctor    Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)
  clinic_id String
  clinic    Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  @@index([doctor_id, leave_date])
  @@index([clinic_id])
}

model Appointment {
  id               String            @id @default(uuid())
  appointment_date DateTime          // Date of the appointment
  time_slot_start  String            // Format: "HH:MM" (e.g., "09:00")
  time_slot_end    String            // Format: "HH:MM" (e.g., "09:30")
  status           AppointmentStatus @default(SCHEDULED)
  type             AppointmentType   @default(NEW)
  chief_complaint  String?           // Reason for visit
  token_number     Int               // Queue token number for the day
  source           AppointmentSource @default(ONLINE)
  notes            String?           @db.Text
  created_at       DateTime          @default(now())
  updated_at       DateTime          @updatedAt

  // Relations
  clinic_id  String
  clinic     Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  patient_id String
  patient    Patient      @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  doctor_id  String
  doctor     Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)

  // Invoice linked to this appointment (optional)
  invoice Invoice?

  @@index([clinic_id, appointment_date, doctor_id])
  @@index([clinic_id])
  @@index([patient_id])
  @@index([doctor_id])
  @@index([status])
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?  @db.Text
  price       Decimal  @db.Decimal(10, 2) // Supports up to 99,999,999.99
  category    String?  // e.g., "Consultation", "Procedure", "Test", "Medication"
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())

  // Relations
  clinic_id String
  clinic    Clinic @relation(fields: [clinic_id], references: [id], onDelete: Cascade)

  @@index([clinic_id, is_active])
  @@index([clinic_id])
}

model Invoice {
  id             String        @id @default(uuid())
  invoice_number String        // Clinic-specific invoice number, e.g., "INV-2026-0001"
  items          Json          // Array of {service_id, name, quantity, unit_price, amount}
  subtotal       Decimal       @db.Decimal(10, 2)
  discount       Decimal       @default(0) @db.Decimal(10, 2)
  tax            Decimal       @default(0) @db.Decimal(10, 2)
  total          Decimal       @db.Decimal(10, 2)
  payment_mode   PaymentMode   @default(CASH)
  payment_status PaymentStatus @default(PENDING)
  notes          String?       @db.Text
  created_at     DateTime      @default(now())

  // Relations
  clinic_id      String
  clinic         Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  patient_id     String
  patient        Patient      @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  appointment_id String?      @unique // Nullable - invoice may or may not be linked to an appointment (one-to-one)
  appointment    Appointment? @relation(fields: [appointment_id], references: [id])
  created_by_id  String
  created_by     User         @relation(fields: [created_by_id], references: [id])

  @@unique([clinic_id, invoice_number])
  @@index([clinic_id, invoice_number])
  @@index([clinic_id])
  @@index([patient_id])
  @@index([appointment_id])
  @@index([created_by_id])
  @@index([payment_status])
}
