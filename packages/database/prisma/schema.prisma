generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProfessionalType {
  DOCTOR
  DENTIST
  PHARMACIST
}

enum UserRole {
  USER
  PROFESSIONAL
  ADMIN
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ClinicType {
  CLINIC
  POLYCLINIC
  HOSPITAL
  PHARMACY
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified DateTime?
  phone         String?
  password_hash String?
  name          String?
  image         String?
  role          UserRole  @default(USER)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  // App relations
  verification_requests  VerificationRequest[] @relation("UserRequests")
  reviewed_verifications VerificationRequest[] @relation("ReviewedBy")
  claimed_professionals  Professional[]        @relation("ClaimedBy")
  audit_logs             AuditLog[]
  claimed_clinics        Clinic[]              @relation("ClinicClaimedBy")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Professional {
  id                  String           @id @default(uuid())
  type                ProfessionalType
  registration_number String
  full_name           String
  full_name_ne        String?
  photo_url           String?
  gender              String?
  address             String?
  degree              String?
  specialties         String[]
  registration_date   DateTime?
  remarks             String?
  verified            Boolean          @default(false)
  slug                String
  created_at          DateTime         @default(now())
  updated_at          DateTime         @updatedAt
  last_synced_at      DateTime?
  meta                Json?

  // Claimed by relation (optional)
  claimed_by_id String?
  claimed_by    User?   @relation("ClaimedBy", fields: [claimed_by_id], references: [id])

  // Verification requests for this professional
  verification_requests VerificationRequest[]

  // Clinics where this professional works
  clinics ClinicDoctor[]

  @@unique([type, registration_number])
  @@index([slug])
  @@index([type])
  @@index([claimed_by_id])
}

model VerificationRequest {
  id                String             @id @default(uuid())
  status            VerificationStatus @default(PENDING)
  government_id_url String?
  certificate_url   String?
  admin_notes       String?            @db.Text
  submitted_at      DateTime           @default(now())
  reviewed_at       DateTime?

  // Relations
  user_id        String
  user           User         @relation("UserRequests", fields: [user_id], references: [id])
  professional_id String
  professional   Professional @relation(fields: [professional_id], references: [id])
  reviewed_by_id String?
  reviewed_by    User?        @relation("ReviewedBy", fields: [reviewed_by_id], references: [id])

  @@index([status])
  @@index([user_id])
  @@index([professional_id])
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String   // "CLAIM_SUBMITTED", "CLAIM_APPROVED", "CLAIM_REJECTED"
  target_type String   // "VerificationRequest"
  target_id   String
  actor_id    String?
  actor       User?    @relation(fields: [actor_id], references: [id])
  metadata    Json?
  ip_address  String?
  user_agent  String?
  created_at  DateTime @default(now())

  @@index([action])
  @@index([target_type, target_id])
  @@index([actor_id])
  @@index([created_at])
}

model Clinic {
  id              String      @id @default(uuid())
  name            String
  slug            String      @unique
  type            ClinicType
  address         String?
  location_lat    Float?
  location_lng    Float?
  phone           String?
  email           String?
  website         String?
  logo_url        String?
  photos          String[]
  services        String[]
  timings         Json?
  verified        Boolean     @default(false)
  google_place_id String?
  osm_id          String?
  meta            Json?
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  // Claimed by relation (optional)
  claimed_by_id String?
  claimed_by    User?   @relation("ClinicClaimedBy", fields: [claimed_by_id], references: [id])

  // Doctors affiliated with this clinic
  doctors ClinicDoctor[]

  @@index([type])
  @@index([claimed_by_id])
}

model ClinicDoctor {
  id        String   @id @default(uuid())
  role      String?  // e.g., "visiting", "permanent", "consultant"
  joined_at DateTime @default(now())

  // Relations
  clinic_id String
  clinic    Clinic       @relation(fields: [clinic_id], references: [id], onDelete: Cascade)
  doctor_id String
  doctor    Professional @relation(fields: [doctor_id], references: [id], onDelete: Cascade)

  @@unique([clinic_id, doctor_id])
  @@index([clinic_id])
  @@index([doctor_id])
}
