{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["DATABASE_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^db:generate"]
    },
    "typecheck": {
      "dependsOn": ["^db:generate"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "import:doctors": {
      "cache": false,
      "dependsOn": ["db:generate"]
    },
    "import:dentists": {
      "cache": false,
      "dependsOn": ["db:generate"]
    },
    "import:pharmacists": {
      "cache": false,
      "dependsOn": ["db:generate"]
    }
  }
}
